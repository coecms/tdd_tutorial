@test
subroutine test_hello()
    use pfunit_mod
    use greeter_mod
    implicit none
    @assertEqual("Hello World", greeter())
end subroutine test_hello

@test
subroutine test_pluto()
    use pfunit_mod
    use greeter_mod
    implicit none
    @assertEqual("Hello Pluto", greeter(cAddressee = "Pluto"))
end subroutine test_pluto

@test
subroutine test_howdy()
    use pfunit_mod
    use greeter_mod
    implicit none
    @assertEqual("Howdy World", greeter(cGreeting = "Howdy"))
end subroutine test_howdy
